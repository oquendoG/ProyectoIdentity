<ul class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            <a class="nav-link text-white" href="">Hola, @UserManager.GetUserName(User)</a>
        </li>

        <li class="nav-item">
            <form asp-controller="Cuentas" asp-action="CerrarSesion" id="LogoutForm" method="post" class="form-inline">
                <button type="submit" class="btn nav-link">Salir</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Cuentas" asp-action="Registro">Registro</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Cuentas" asp-action="IniciarSesion">Iniciar sesión</a>
        </li>
    }
</ul>